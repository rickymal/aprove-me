pipeline {
    agent any

    environment {
        DOCKER_COMPOSE_FILE = 'backend/docker-compose.yml'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'dev', url: 'https://github.com/rickymal/aprove-me'
            }
        }
        stage('Install Dependencies') {
            steps {
                dir('backend') {
                    sh 'docker-compose -f $DOCKER_COMPOSE_FILE run --rm app npm install'
                }
            }
        }
        stage('Generate Prisma') {
            steps {
                dir('backend') {
                    sh 'docker-compose -f $DOCKER_COMPOSE_FILE run --rm app npx prisma generate'
                }
            }
        }
        stage('Run Migrations') {
            steps {
                dir('backend') {
                    sh 'docker-compose -f $DOCKER_COMPOSE_FILE run --rm app npx prisma migrate deploy'
                }
            }
        }
        stage('Lint') {
            steps {
                dir('backend') {
                    sh 'docker-compose -f $DOCKER_COMPOSE_FILE run --rm app npm run lint'
                }
            }
        }
        stage('Test') {
            steps {
                dir('backend') {
                    sh 'docker-compose -f $DOCKER_COMPOSE_FILE run --rm app npm run test'
                }
            }
        }
        stage('Build') {
            steps {
                dir('backend') {
                    sh 'docker-compose -f $DOCKER_COMPOSE_FILE run --rm app npm run build'
                }
            }
        }
    }

    post {
        always {
            dir('backend') {
                sh 'docker-compose -f $DOCKER_COMPOSE_FILE down'
            }
            cleanWs()
        }
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
