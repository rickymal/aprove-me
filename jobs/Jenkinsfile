pipeline {
    agent any

    environment {
        DOCKER_COMPOSE_PATH = '../backend/docker-compose.yml'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'dev', url: 'https://github.com/rickymal/aprove-me'
            }
        }
        stage('List Files') {
            steps {
                script {
                    // Lista os arquivos no workspace atual
                    sh 'ls -la'
                    // Lista os arquivos no diretório backend
                    sh 'ls -la ../backend'
                }
            }
        }
        stage('Install Dependencies and Test') {
            steps {
                script {
                    // Executa os comandos docker-compose no diretório correto
                    sh 'docker-compose -f $DOCKER_COMPOSE_PATH build'
                    // sh 'docker-compose -f $DOCKER_COMPOSE_PATH run --rm app npm install'
                    sh 'docker-compose -f $DOCKER_COMPOSE_PATH up'
                }
            }
        }
    }

    post {
        always {
            script {
                // Derruba os containers
                sh 'docker-compose -f $DOCKER_COMPOSE_PATH down'
            }
        }
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
